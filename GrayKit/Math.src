GrayKit.Math = {}

// Gets the maximum between numbers a and b
// @param number a
// @param number b
// @return number
GrayKit.Math.max = function(a, b)
	if a > b then
		return a
	else 
		return b
	end if
end function

// Gets the minimum between numbers a and b
// @param number a
// @param number b
// @return number
GrayKit.Math.min = function(a, b)
	if a < b then
		return a
	else 
		return b
	end if
end function

// Clamps a number between min and max.
// @param number val Value to clamp
// @param number minVal
// @param number maxVal
GrayKit.Math.clamp = function(val, minVal, maxVal)
	return GrayKit.Math.max(minVal, GrayKit.Math.min(val, maxVal))
end function
